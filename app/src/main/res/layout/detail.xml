<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#f1f3f5"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:padding="10dp"
        android:elevation="10dp"
        android:background="@drawable/rounded_container">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_weight="4"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="NAME"
                android:textSize="14dp"
                android:textStyle="bold"
                android:textColor="@color/darkyButNotDark"/>
            <EditText
                android:id="@+id/editName"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:paddingHorizontal="10dp"
                android:background="@drawable/rounded_box"
                android:layout_height="wrap_content"
                android:minHeight="35dp"
                android:elevation="2dp"
                android:textColorHint="@color/grayButNotGray"
                android:textColor="@color/darkyButNotDark"
                android:hint="Name" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_weight="4"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="Code"
                android:textSize="14dp"
                android:textStyle="bold"
                android:textColor="@color/darkyButNotDark"/>
            <EditText
                android:id="@+id/editCode"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:paddingHorizontal="10dp"
                android:background="@drawable/rounded_box"
                android:layout_height="wrap_content"
                android:minHeight="35dp"
                android:elevation="2dp"
                android:textColorHint="@color/grayButNotGray"
                android:textColor="@color/darkyButNotDark"
                android:hint="Code" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_weight="4"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:textSize="14dp"
                android:textStyle="bold"
                android:text="Time"
                android:textColor="@color/darkyButNotDark"/>
            <EditText
                android:id="@+id/editTime"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:paddingHorizontal="10dp"
                android:background="@drawable/rounded_box"
                android:layout_height="wrap_content"
                android:minHeight="35dp"
                android:elevation="2dp"
                android:textColorHint="@color/grayButNotGray"
                android:textColor="@color/darkyButNotDark"
                android:hint="Time" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_margin="5dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="Alarm"
                android:textSize="14dp"
                android:textStyle="bold"
                android:textColor="@color/darkyButNotDark"/>
            <Switch
                android:id="@+id/editActivation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginLeft="15dp"
                android:checked="false"
                android:textColorHint="@color/darkyButNotDark"
                android:track="@drawable/switch_track_selector"
                android:thumb="@drawable/switch_thumb"
                tools:ignore="UseSwitchCompatOrMaterialXml" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="Day of week"
                android:textSize="14dp"
                android:textStyle="bold"
                android:textColor="@color/darkyButNotDark"/>
            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:popupBackground="#f1f3f5"
                android:layout_weight="1"
                android:spinnerMode="dropdown"
                android:id="@+id/daySpin" />
        </LinearLayout>

        <Button
            android:id="@+id/btnUpdate"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:elevation="10dp"
            android:background="@drawable/rounded_box_blue"
            android:text="update" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:elevation="10dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editContent"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:textColor="@color/darkyButNotDark"
                android:textColorHint="@color/grayButNotGray"
                android:layout_margin="5dp"
                android:textSize="13dp"
                android:hint="Content"
                android:layout_height="40dp" />

            <Button
                android:id="@+id/addReview"
                android:background="@drawable/rounded_box"
                android:layout_width="match_parent"
                android:layout_margin="1dp"
                android:layout_height="30dp"
                android:textColor="@color/black"
                android:text="Add"
                android:layout_weight="4" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:scrollbarThumbVertical="@color/grayButNotGray"
            android:scrollbars="vertical">
            <LinearLayout
                android:id="@+id/layoutContainer"
                android:gravity="center"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>